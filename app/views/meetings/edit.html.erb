
<%= form_tag "/meetings/#{@meeting.id}", method: :patch, class: "well" do %>
<h1>Edit Meeting</h1>
  <div class="form-group">
    Student:
    <select name="student_id">
      <% @students.each do |student| %>
        <option <%= 'selected="selected"' if student.id == @meeting.student.id %> value="<%= student.id %>"><%= student.name %></option>
      <% end %>
    </select>
    </div>
    <div class="form-group">
      
    Teacher:
    <select name="teacher_id">
      <option value=""></option>
      <% @teachers.each do |teacher| %>
        <option <%= 'selected="selected"' if teacher.id == @meeting.teacher.id %> value="<%= teacher.id %>"><%= teacher.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    Date:
    <select name="date">
      <% @available_dates.each do |day| %>
        <option <%= 'selected="selected"' if day == @meeting.date.strftime('%A') %> value="<%= day %>"><%= day %></option>
      <% end %>
    </select>
    </div>
    <div class="form-group">
      
    Time:
    <select name="time_slot">
      <% @available_times.each do |time| %>
        <option <%= 'selected="selected"' if time == @meeting.time_slot %> value="<%= time %>"><%= time %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" value="Update Meeting" class="btn btn-primary">
<% end %>

<%= link_to "Delete Meeting", "/meetings/#{@meeting.id}", method: :delete, class: "btn btn-danger" %>